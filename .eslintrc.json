{
    "extends": "airbnb-base",
    "rules": {
        "indent": [ "error", 4 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "double" ],
        "eqeqeq": [ "error", "smart" ],
        "strict": "error",
        "prefer-destructuring": ["error", {
            "AssignmentExpression": {
                    "array": false,
                    "object": false
            }
        }]
    },
    "env": {
        "browser": true,
        "commonjs": true
    },
    "globals": {
        "browser": false,
        "chrome": false
    }
}
